{
  "name": "client",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "build:development": "docker build -t multicontainer_todo_client:dev --build-arg NODE_ENV=development .",
    "build:test": "docker build -t multicontainer_todo_client:test --build-arg NODE_ENV=test",
    "build:prod": "docker build -t multicontainer_todo_client:production --build-arg NODE_ENV=production",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --build --force",
    "docker:development": "cross-env NODE_ENV=development docker-compose -f ../docker/client/docker-compose.yml -p multicontainer-todo-development up --build -d",
    "docker:test": "cross-env NODE_ENV=test docker-compose -f ../docker/client/docker-compose.yml -p multicontainer-todo-client-test up --build -d",
    "docker:production": "cross-env NODE_ENV=production docker-compose -f ../docker/client/docker-compose.yml -p multicontainer-todo-client-production up --build -d"
  },
  "dependencies": {
    "vue": "^3.4.29",
    "vue-material-design-icons": "^5.3.0",
    "vue-router": "^4.3.3"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.1.4",
    "@types/node": "^20.14.5",
    "@vitejs/plugin-vue": "^5.0.5",
    "@vitejs/plugin-vue-jsx": "^4.0.0",
    "@vue/tsconfig": "^0.5.1",
    "autoprefixer": "^10.4.20",
    "cross-env": "^7.0.3",
    "npm-run-all2": "^6.2.0",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.13",
    "typescript": "~5.4.0",
    "vite": "^5.3.1",
    "vue-tsc": "^2.0.21"
  }
}
